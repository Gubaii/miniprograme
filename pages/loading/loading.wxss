.loading-container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

/* 图片预览区域 */
.image-preview {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  background-color: #1a1a1a;
  border-radius: 20rpx;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

/* 加载内容区域 */
.loading-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
}

.loading-title {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  margin: 0 20rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.btn-outline {
  color: #00CED1;
  background-color: transparent;
  border: 2rpx solid #00CED1;
}

.btn-primary {
  color: #ffffff;
  background-color: #00CED1;
  border: none;
}

/* 页面配置 */
page {
  background-color: #000000;
} 