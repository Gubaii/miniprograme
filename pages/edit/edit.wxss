.edit-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #000;
}

.image-preview {
  flex: 1;
  position: relative;
  width: 100%;
  background-color: #1a1a1a;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.preview-image.error {
  display: none;
}

.loading-placeholder,
.error-placeholder,
.empty-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #666;
}

.error-tip {
  display: block;
  margin-top: 8px;
  font-size: 12px;
  color: #999;
}

.start-button {
  margin: 16px;
  padding: 12px;
  background-color: #00e5c7;
  border-radius: 24px;
  text-align: center;
  color: #000;
}

.start-button.disabled {
  background-color: #333;
  color: #666;
}