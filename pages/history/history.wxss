.container {
  min-height: 100vh;
  background: #000000;
  padding: 0;
}

.tip-container {
  padding: 16rpx 32rpx;
  background: rgba(255, 193, 7, 0.15);
  margin: 0;
}

.tip-text {
  color: #FFC107;
  font-size: 26rpx;
  line-height: 1.4;
}

.task-list {
  padding: 24rpx 16rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.task-card {
  background: #1E1E1E;
  border-radius: 12rpx;
  padding: 16rpx;
  position: relative;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.status-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

.status-text {
  color: #FFFFFF;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.result-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 12rpx;
}

.function-name {
  position: absolute;
  left: 16rpx;
  bottom: 48rpx;
  color: #fff;
  font-size: 24rpx;
  background: rgba(0,0,0,0.6);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.complete-time {
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  color: #999;
  font-size: 22rpx;
} 