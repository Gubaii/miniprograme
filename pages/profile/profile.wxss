.profile-container {
  min-height: 100vh;
  background-color: #000000;
  padding: 20rpx;
  color: #ffffff;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: transparent;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.nickname {
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  background: transparent;
  padding: 10rpx;
  width: 80%;
}

/* 积分区域 */
.points-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.points-info {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.points-value {
  font-size: 32rpx;
  color: #FFD700;
}

.buy-points {
  padding: 10rpx 20rpx;
}

.buy-text {
  font-size: 28rpx;
  color: #00CED1;
}

/* 导航菜单 */
.menu-list {
  margin-top: 40rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.menu-text {
  font-size: 28rpx;
  color: #ffffff;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ffffff;
  border-right: 2rpx solid #ffffff;
  transform: rotate(45deg);
  margin-right: 10rpx;
}

/* 页面配置 */
page {
  background-color: #000000;
} 