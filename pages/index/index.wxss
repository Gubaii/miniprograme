.container {
  min-height: 100vh;
  background-color: #000000;
  padding: 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 轮播图区域 */
.banner-swiper {
  width: 100%;
  height: 35vh;
  background-color: #1a1a1a;
  margin-bottom: 20rpx;
}

.banner-swiper image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 选择图片按钮 */
.choose-image-btn {
  margin: 20rpx 30rpx;
  height: 100rpx;
  background-color: #00CED1;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 工具栏标题 */
.tools-title {
  margin: 30rpx;
  display: flex;
  align-items: center;
  color: #ffffff;
  font-size: 28rpx;
}

.title-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 工具栏 */
.tools-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  background-color: #1a1a1a;
  border-radius: 20rpx;
  margin: 0 30rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.tool-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background-color: #00CED1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.tool-icon {
  width: 100%;
  height: 100%;
}

.tool-name {
  font-size: 26rpx;
  color: #ffffff;
  text-align: center;
}

/* 页面配置 */
page {
  background-color: #000000;
}